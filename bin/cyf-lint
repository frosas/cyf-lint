#!/usr/bin/env node --unhandled-rejections=strict

const execa = require("execa");

(async () => {
  const paths = process.argv.slice(2);
  const command =
    `npx eslint ` +
    `--config ${__dirname}/../.eslintrc.js ` +
    `--format codeframe ` +
    paths.join(" ");
  try {
    await execa(command, { stdio: "inherit", shell: true });
  } catch (_) {
    process.exit(1);
  }
})();
